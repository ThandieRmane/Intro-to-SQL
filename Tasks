#Find all tracks with a length of 5 000 000 milliseconds or more
select trackid,milliseconds #to indicate which rows to return
from tracks #to indicate the table where the columns are
where milliseconds >= '5000000' 

#Find all the invoices whose total is between $5 and $15 
select invoiceid,total #to indicate which rows to return 
from invoices #to indicate the table where the columns are
where total between '5' and '15'

#Find all the customers from the following States: RJ, DF, AB, BC, CA, WA, NY.
select customerid,state,firstname,lastname,company
from customers
where in ('RJ', 'DF', 'AB', 'BC', 'CA', 'WA', 'NY')

#Find all the invoices for customer 56 and 58 where the total is between $1 and $5
select total, customerid, invoiceid, invoicedate
from invoices
where customerid in ('56','58') and (total between 1 and 5

#Find all the tracks whose name starts with "All"
select name, trackid
from tracks 
where name like 'all%'

#Find all the customers emails that start with 'J' and are from gmail.com
select *
from customers
where email like 'j@gmail.com'

#Find all the invoices from the billing city Brasilia, Edmonton, and Vancouver and sort in descending
select *
from invoices
where billingcity in ('Brasilia, 'Edmonton', 'Vancouver')
ORDERBY invoiceid desc

#Show the number of orders placed by each customer and sort the result by the number of orders in descending order
select *,
count (customerid) as totals
from invoices
GROUP BY customerid

#Find the albums with 12 or more tracks
Select *,
count (trackid) as totaltracks
from tracks 
group by albumid
having count (trackid) >= 12
